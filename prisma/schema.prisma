generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?
  access_token       String?
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?
  session_state      String?
  oauth_token_secret String?
  oauth_token        String?
  user               User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String     @id @default(cuid())
  name          String?
  email         String?    @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  bookmarks     Bookmark[]
  Question      Question[]
  sessions      Session[]
}

model Bookmark {
  id         String   @id @default(cuid())
  userId     String
  questionId String
  createdAt  DateTime @default(now())
  question   Question @relation(fields: [questionId], references: [id], onDelete: Cascade)
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, questionId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Boards {
  id       String     @id @default(cuid())
  name     String
  logo_url String?
  Question Question[]
}

model Q_type {
  id       String     @id @default(cuid())
  name     String
  Question Question[]
}

model Question {
  id           String     @id @default(cuid())
  pdf_url      String
  boardId      String?
  year         Int?
  typeId       String
  subject      String
  author       String
  ownerId      String
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  class_name   String
  difficulty   String
  slug         String     @unique
  title        String
  bookmarkedBy Bookmark[]
  board        Boards?    @relation(fields: [boardId], references: [id])
  owner        User       @relation(fields: [ownerId], references: [id])
  type         Q_type     @relation(fields: [typeId], references: [id])
}

model Subscriber {
  id        String   @id @default(cuid())
  email     String   @unique
  createdAt DateTime @default(now())
}

